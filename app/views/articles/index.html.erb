<% provide(:title, 'Homepage') %>

<div class="blog-header">
	<h1 class="blog-title">AmirolAhmad's Blog</h1>
	<p class="lead blog-description">The official blog of AmirolAhmad, RoR Developer, and a husband with 1 kid.</p>
</div>

<p class="text-info"><%= notice %></p>

<div class="row">
	<div class="col-sm-8 blog-main">
		<% @articles.each do |article| %>
		<div class="blog-post">
			<h2 class="blog-post-title">
				<%= link_to article.title, article_path(article) %>

				<% if user_signed_in? %>
				<div class="btn-group btn-group-xs">
					<%= link_to 'Edit', edit_article_path(article), :class => "btn btn-primary" %>
	  				<%= link_to 'Destroy', article_path(article), method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %>
				</div>
				<% end %>
				
			</h2>
			<p class="blog-post-meta">Created at <%= article.created_at.strftime("%b %d, %Y") %></p>
			<%= simple_format(article.text.split[0..56].join(" ")) %>
			
			<ul class="pager">
				<li><%= link_to "Read more", article_path(article) %></li>
			</ul>
		</div>
		<% end %>
		<%= will_paginate @articles %>
	</div>
	<div class="col-sm-3 col-sm-offset-1 blog-sidebar">
		<div class="sidebar-module sidebar-module-inset">
			<p>Learn how to code via TreeHouse</p>
			<p><a href="http://referrals.trhou.se/amirolahmad" target="_blank"><img src="http://wac.a8b5.edgecastcdn.net/80A8B5/static-assets/assets/content/referral-badge-green.png" width="215"/></a></p>
		</div>
		<div class="sidebar-module">
			<h4>Articles</h4>
			<ol class="list-unstyled">
				<% @articles.each do |article| %>
				<li><%= link_to article.title, article_path(article) %> <small>at <%= article.created_at.strftime("%b %d, %Y") %></small></li>
				<% end %>
			</ol>
		</div>
	</div>
</div>

